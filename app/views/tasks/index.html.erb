<p class="link"><%= link_to "投稿画面へ", new_task_path %></p>
<div class="form-group"> 
  <h1>タスク一覧</h1>
  <% @tasks.each do |task| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h3 class="card-title"><%= task.title %></h3>
        <%= link_to "詳細", task_path(task.id), class: "btn btn-primary" %>      
        <%= link_to "編集", edit_task_path(task.id), class: "btn btn-primary" %>      
        <%= link_to "削除", task_path(task.id), class: "btn btn-danger", method: :delete, data: {confirm: "削除してもよろしいですか？"} %>      
      </div>
    </div>
  <% end %>
</div>